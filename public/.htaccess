<IfModule mod_rewrite.c>
  RewriteEngine On
  
 # Force HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  # Set the base for relative paths
  RewriteBase /

  # Don't rewrite if it's a real file
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # If the request starts with /en and the English build exists, serve /en/index.html
  RewriteCond %{DOCUMENT_ROOT}/en/index.html -f
  RewriteCond %{REQUEST_URI} ^/en(/|$)
  RewriteRule ^ /en/index.html [QSA,L]

  # Otherwise serve the root index.html (Romanian build)
  RewriteRule ^ /index.html [QSA,L]
</IfModule>

# Gzip compression for performance
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/xml
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Cache images for 30 days
  ExpiresByType image/jpeg A2592000
  ExpiresByType image/png A2592000
  ExpiresByType image/gif A2592000
  ExpiresByType image/x-icon A2592000
  
  # Cache CSS and JS for 30 days
  ExpiresByType text/css A2592000
  ExpiresByType application/javascript A2592000
  
  # Don't cache HTML (so users get updates)
  ExpiresByType text/html A0
</IfModule>
